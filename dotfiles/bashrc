umask 022

alias d="/usr/local/bin/docker_wrap.sh"
alias perl="rlwrap perl -M'List::Util qw{max}' -MData::Dumper -MDBI -M'Digest::MD5 qw{md5_hex}' -M'FindBin qw{\$Bin}' -MJSON"
alias ls="ls --color"
