# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

export PS1="[\u@\h \W]\$ "
export EDITOR=vim
export GOPATH=/usr/local

alias d="/usr/local/bin/docker_wrap.sh"
alias g="git"
alias cpanm="sudo /usr/local/bin/cpanm"
alias perl="perl -M'feature qw/say/' -MData::Dumper"
alias ls="ls --color"
alias ll="ls -l"

if [ -f ~/.bashrc2 ] ; then
  . ~/.bashrc2
fi
