function multi
{
  #if [[ "$2" -lt "80" ]] ; then
  #  multi=/usr/mysql/5.6.51/bin/mysqld_multi
  #else
  #  multi=/usr/mysql/8.0.43/bin/mysqld_multi
  #fi
  multi=/usr/mysql/8.0.43/bin/mysqld_multi
  case "$1" in
    "restart")
      shift
      $multi stop $*
      sleep 10
      $multi start $*
      ;;
    *)
      $multi $*
      ;;
  esac
}




